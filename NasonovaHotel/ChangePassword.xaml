<Window x:Class="NasonovaHotel.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NasonovaHotel"
        mc:Ignorable="d"
        Title="Изменение пароля" Height="300" Width="400" SizeToContent="WidthAndHeight" Background="#8B0000">
    <Grid>
        <Label Content="Смена пароля" HorizontalAlignment="Left" Margin="112,0,0,0" VerticalAlignment="Top" Height="38" Width="172" Foreground="#FFFFFF" FontWeight="Bold" FontSize="22"/>
        <TextBox HorizontalAlignment="Center" Margin="0,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="292" Height="39" Background="#CD5C5C"/>
        <TextBox HorizontalAlignment="Center" Margin="0,192,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="292" Height="39" Background="#CD5C5C"/>
        <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="292" Height="39" Background="#CD5C5C" Margin="52,0,0,0"/>
        <Button Content="Изменить пароль" FontSize="16" HorizontalAlignment="Center" Margin="0,244,0,0" VerticalAlignment="Top" Width="169" Height="40" FontWeight="Bold" Foreground="#FFFFFF" Background="#FA8072"/>
        <TextBlock Text="Текущий пароль" FontWeight="Bold" FontSize="14" Foreground="#FFFFFF" Margin="52,38,213,227"/>
        <TextBlock Text="Новый пароль" FontWeight="Bold" FontSize="14" Foreground="#FFFFFF" Margin="54,101,200,161"/>
        <TextBlock Text="Подтверждение нового пароля" FontWeight="Bold" FontSize="14" Foreground="#FFFFFF" Margin="54,167,116,97"/>
    </Grid>
</Window>
